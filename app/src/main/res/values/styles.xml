<resources>
    <!-- Estilo para botones en el primer tema -->
    <style name="CustomButtonStyle1" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorPrimary1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomTextViewStyle1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomButtonStyle2" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorPrimary2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomTextViewStyle2" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textColor2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.Saludo.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Saludo.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


</resources>
